<?xml version="1.0" encoding="UTF-8"?>
<dialog var="createItemDialog" title="Create" defaultcloseoperation="DISPOSE_ON_CLOSE" locationrelativeto="rootFrame"
  size="360,160" resizable="false">
  <panel>
    <gridbaglayout>
      <gridbagconstraints id="gbc" gridx="0" gridy="0" weightx="0.1" weighty="0.1" fill="BOTH">
        <panel>
          <titledborder title="Create Item" titlejustification="LEFT" titleposition="CENTER" titlefont="SansSerif,bold,14">
            <etchedborder type="LOWERED" />
          </titledborder>
          <gridbaglayout>
            <gridbagconstraints id="gbc_fields" gridx="0" gridy="0" anchor="EAST" fill="BOTH">
              <label text="Name:" font="Bitstream Vera Sans,plain,14" />
            </gridbagconstraints>
            <idref ctor="gbc_fields" gridx="1" gridy="0" anchor="WEST">
              <textfield var="createItemDialogNameTextField" columns="20" font="Bitstream Vera Sans,plain,14" />
            </idref>
          </gridbaglayout>
        </panel>
      </gridbagconstraints>
      <idref ctor="gbc" gridx="0" gridy="1" weightx="0.1" weighty="0.02">
        <panel>
          <gridbaglayout>
            <gridbagconstraints id="gbc_buttons" gridx="0" gridy="0" anchor="EAST" weightx="0.1"
              weighty="0.1" insets="5,5,5,5">
              <button var="createItemDialogOKButton" text="Save" actionlistener="createItemDialogOKActionListener"
                font="Bitstream Vera Sans,bold,14" />
            </gridbagconstraints>
            <idref ctor="gbc_buttons" gridx="1" gridy="0" anchor="WEST">
              <button var="createItemDialogCancelButton" text="Cancel" actionlistener="createItemDialogCancelActionListener"
                font="Bitstream Vera Sans,bold,14" />
            </idref>
          </gridbaglayout>
        </panel>
      </idref>
    </gridbaglayout>
  </panel>
</dialog>
